@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Writer/WriterLayout.cshtml";
}

<h1>Blogların</h1>
<table class="table table-bordered" style="background-color:white">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Oluşturulma Tarihi</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@item.Category.CategoryName</td>
            <td>@(((DateTime)item.BlogDate).ToString("D"))</td>
            <td>
                @if (item.BlogStatus)
                {
                    <span class="badge badge-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-secondary">Pasif</span>
                }
            </td>
            <td><a href="/Blog/BlogDelete/@item.BlogID" onclick="return confirm('Silmek istediğine emin misin?');" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Blog/BlogUpdate/@item.BlogID" class="btn btn-outline-primary">Düzenle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Blog/BlogAdd/" class="btn btn-dark">Yeni Blog Oluştur</a>

