
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Admin Paneli</title>

    <link href="~/AdminTheme/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTheme/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminTheme/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/AdminTheme/css/animate.css" rel="stylesheet">
    <link href="~/AdminTheme/css/style.css" rel="stylesheet">

</head>

<body>

    <div id="wrapper">

        @await Html.PartialAsync("~/Views/_AdminsLayout/AdminNavbarPartial.cshtml");

        <div id="page-wrapper" class="gray-bg">
        <div class="row border-bottom">
        <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
        </div>
            <ul class="nav navbar-top-links navbar-right">
                <li>
                    <span class="m-r-sm text-muted welcome-message">Admin Paneline Hoşgeldiniz!</span>
                </li>
                <li>
                    <a href="/Writer/LogOut/">
                        <i class="fa fa-sign-out"></i> Log out
                    </a>
                </li>
            </ul>

        </nav>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
                @RenderBody()
        </div>
        </div>
        </div>



    <!-- Mainly scripts -->
    <script src="~/AdminTheme/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminTheme/js/popper.min.js"></script>
    <script src="~/AdminTheme/js/bootstrap.js"></script>
    <script src="~/AdminTheme/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/AdminTheme/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Peity -->
    <script src="~/AdminTheme/js/plugins/peity/jquery.peity.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/AdminTheme/js/inspinia.js"></script>
    <script src="~/AdminTheme/js/plugins/pace/pace.min.js"></script>

    <!-- iCheck -->
    <script src="~/AdminTheme/js/plugins/iCheck/icheck.min.js"></script>

    <!-- Peity -->
    <script src="~/AdminTheme/js/demo/peity-demo.js"></script>

    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>

    @*@await RenderSectionAsync("scripts");*@
</body>

</html>
