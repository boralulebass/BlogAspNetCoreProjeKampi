@model AspNetCoreProjeKampı.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Writer/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profili Düzenle</h4>
                <br>
                @Html.HiddenFor(x=>x.WriterID, new {@class="form-control"})
                @Html.HiddenFor(x=>x.WriterStatus, new {@class="form-control"})
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.WriterName, new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterName,"",new{@class= "text-danger"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        @Html.TextBoxFor(x=>x.WriterMail, new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterMail,"",new{@class= "text-danger"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre *</label>
                        @Html.PasswordFor(x=>x.WriterPassword, new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterPassword,"",new{@class= "text-danger"})

                    </div>
                    <div class="form-group">
                        <label>Yazar Görseli</label>
                        <div><input type="file" asp-for="WriterImage" /></div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkında Bölümü</label>
                        @Html.TextAreaFor(x=>x.WriterAbout,10,3, new {@class="form-control"})
                        @Html.ValidationMessageFor(x=>x.WriterAbout,"",new{@class= "text-danger"})

                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Değişiklikleri Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>

