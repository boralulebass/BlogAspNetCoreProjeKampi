@model UserEditViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Writer/WriterLayout.cshtml";
}
<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profili Düzenle</h4>
                <br>
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.nameSurname, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        @Html.TextBoxFor(x=>x.mail, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Telefon Numarası</label>
                        @Html.TextBoxFor(x=>x.phoneNumber, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Image URL</label>
                        @Html.TextBoxFor(x=>x.imageUrl, new {@class="form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Şifre</label>
                    <input type="password" asp-for="password" class="form-control"/>
                </div>
                <div class="form-check">
                    <input type="checkbox" id="flexCheckChecked" asp-for="@Model.ChangePassword">
                    <label for="flexCheckChecked">
                        Şifremi Değiştirmek istemiyorum
                    </label>
                </div>
 @*                   <div class="form-group">
                        <div class="form-group">
                            <label>Yazar Görseli</label>
                            <div><input type="file" asp-for="" /></div>
                        </div>
                    </div>*@
                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkında Bölümü</label>
                        @Html.TextAreaFor(x=>x.aboutSection,10,3, new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Değişiklikleri Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</form>