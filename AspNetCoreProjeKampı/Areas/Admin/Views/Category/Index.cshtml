@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminsLayout/AdminsLayout.cshtml";
}

<h1>Kategoriler</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" id="deletebtn" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-info">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-dark">Düzenle</a></td>
        </tr>
    }
</table>

<a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page } ))