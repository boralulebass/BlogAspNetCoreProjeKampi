@using EntityLayer.Concrete
@model Message2
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/_AdminsLayout/AdminsLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body>

    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox ">
                    <div class="ibox-content mailbox-content">
                        <div class="file-manager">
                            <a class="btn btn-block btn-primary compose-mail" href="/Admin/AdminMessage/NewMessage/">Mesaj Oluştur</a>
                            <div class="space-25"></div>
                            <h5>Klasörler</h5>
                            <ul class="folder-list m-b-md" style="padding: 0">
                                <li><a href="/Admin/AdminMessage/Inbox/"> <i class="fa fa-inbox "></i> Gelen Mesajlar </a></li>
                                <li><a href="/Admin/AdminMessage/Sendbox/"> <i class="fa fa-envelope-o"></i> Giden Mesajlar</a></li>

                            </ul>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 animated fadeInRight">
                <div class="mail-box-header">
                    <h2>
                        Mesaj Gönder
                    </h2>
                </div>

                @using (Html.BeginForm("NewMessage", "AdminMessage", new { area = "Admin" }, FormMethod.Post))
                {
                    <div class="mail-box">
                        <div class="mail-body">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">To:</label>
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(x=>x.ReceiverID, (List<SelectListItem>)ViewBag.RecieverUser, new{@class="form-control"})
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Subject:</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x=>x.Subject, new{@class="form-control"})
                                </div>
                            </div>
                        </div>
                        <div class="mail-text h-200">

                            <div class="summernote">
                                @Html.TextAreaFor(x=>x.MessageText,30,3, new{@class="form-control"})
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="mail-body text-right tooltip-demo">
                            <button class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Gönder"><i class="fa fa-reply"></i> Gönder</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>

</html>
